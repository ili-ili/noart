{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard",
        "standard-react"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-no-bind": "off",
        "react/no-did-update-set-state": "off",
        "react/prop-types": "off",
        "strict": 0,
				"indent": "off", 
				"no-tabs": 0
    }
}
